{
  "packages": {
    ".": {
      "release-type": "node",
      "extra-files": [
        {
          "type": "json",
          "path": "src-tauri/tauri.conf.json",
          "jsonpath": "$.version"
        },
        {
          "type": "toml",
          "path": "src-tauri/Cargo.toml",
          "jsonpath": "$.package.version"
        },
        "src-tauri/Cargo.lock"
      ]
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "path": "."
    }
  ],
  "changelog-sections": [
    {
      "type": "conventional-commits",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "conventional-commits",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "conventional-commits",
      "section": "Other",
      "hidden": false
    }
  ]
}
