{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Copilot Tracker",
  "version": "1.0.0",
  "identifier": "com.copilottracker",
  "build": {
    "frontendDist": "../out/renderer",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": ["default"]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Copilot Tracker",
        "width": 400,
        "height": 600,
        "resizable": true,
        "visible": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "category": "Productivity",
    "shortDescription": "Track GitHub Copilot usage",
    "longDescription": "Monitor your GitHub Copilot usage with system tray integration and usage predictions.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "YOUR_PUBLIC_KEY_HERE",
      "endpoints": [
        "https://github.com/YOUR_USERNAME/copilot-tracker/releases/latest/download/latest-darwin.json",
        "https://github.com/YOUR_USERNAME/copilot-tracker/releases/latest/download/latest-linux.json",
        "https://github.com/YOUR_USERNAME/copilot-tracker/releases/latest/download/latest-windows-x86_64.json"
      ]
    }
  }
}
