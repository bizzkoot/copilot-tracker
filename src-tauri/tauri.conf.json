{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Copilot Tracker",
  "version": "2.3.1",
  "identifier": "com.copilottracker",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out/renderer",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        "default",
        "remote-github"
      ]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Copilot Tracker",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "visible": false,
        "skipTaskbar": true
      },
      {
        "label": "widget",
        "title": "Copilot Usage Widget",
        "url": "/widget.html",
        "width": 280,
        "height": 180,
        "minWidth": 280,
        "minHeight": 180,
        "maxWidth": 280,
        "maxHeight": 180,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "center": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Track GitHub Copilot usage",
    "longDescription": "Monitor your GitHub Copilot usage with system tray integration and usage predictions.",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.svg"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
