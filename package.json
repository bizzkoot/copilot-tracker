{
  "name": "copilot-tracker",
  "version": "2.4.0",
  "description": "Copilot Usage Tracker - Tauri App",
  "main": "./out/main/index.js",
  "author": "",
  "homepage": "",
  "scripts": {
    "validate:assets": "ts-node scripts/validate-assets.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "npm run dev",
    "dev": "npm run clean:port && npm run clean:cargo-lock && tauri dev",
    "dev:web": "vite --port 5173 --host",
    "clean:port": "lsof -ti :5173 | xargs kill -9 2>/dev/null || true",
    "clean:cargo-lock": "lsof -t src-tauri/target/debug/.cargo-lock 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "build:web": "npm run validate:assets && npm run typecheck && vite build",
    "build": "npm run build:web && tauri build",
    "build:win": "npm run build:web && tauri build --target x86_64-pc-windows-msvc",
    "build:mac": "npm run build:web && tauri build --target universal-apple-darwin",
    "build:linux": "npm run build:web && tauri build --target x86_64-unknown-linux-gnu"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "canvas": "^3.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.2.10",
    "lucide-react": "^0.400.0",
    "recharts": "^2.12.7",
    "semver": "^7.7.3",
    "tailwind-merge": "^2.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@swc/core": "^1.15.11",
    "@tauri-apps/cli": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/semver": "^7.7.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
